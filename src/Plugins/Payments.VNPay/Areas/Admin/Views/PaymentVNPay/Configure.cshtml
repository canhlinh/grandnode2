@{
    Layout = "_ConfigurePlugin";
}
@model ConfigurationModel
@using Payments.VNPay.Models;
<input id="active-menu-item" type="hidden" value="/Admin/Payment/Methods" />
<form asp-controller="PaymentVNPay" asp-action="Configure" method="post">
    
    <div class="form-horizontal">
        <div class="form-body">
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="ReturnURL" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="ReturnURL" />
                    <span asp-validation-for="ReturnURL"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="PaymentURL" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="PaymentURL" />
                    <span asp-validation-for="PaymentURL"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="TmnCode" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="TmnCode" />
                    <span asp-validation-for="TmnCode"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="HashSecret" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="HashSecret" />
                    <span asp-validation-for="HashSecret"></span>
                </div>
            </div>
            <div class="form-group"></div>
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="Description" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="Description" />
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="DisplayOrder" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="DisplayOrder" />
                    <span asp-validation-for="DisplayOrder"></span>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="offset-md-3 offset-sm-3 col-md-9 col-sm-9">
                        <input type="submit" name="save" class="btn green" value="@Loc["Admin.Common.Save"]" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
