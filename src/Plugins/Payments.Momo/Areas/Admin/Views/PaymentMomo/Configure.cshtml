@{
    Layout = "_ConfigurePlugin";
}
@model ConfigurationModel
@using Payments.Momo.Models;
<input id="active-menu-item" type="hidden" value="/Admin/Payment/Methods" />
<form asp-controller="PaymentMomo" asp-action="Configure" method="post">
    <div class="form-horizontal">
        <div class="form-body">
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="ReturnURL" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="ReturnURL" />
                    <span asp-validation-for="ReturnURL"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="PartnerCode" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="PartnerCode" />
                    <span asp-validation-for="PartnerCode"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="AccessKey" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="AccessKey" />
                    <span asp-validation-for="AccessKey"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="SecretKey" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="SecretKey" />
                    <span asp-validation-for="SecretKey"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="Environment" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <select asp-for="Environment" asp-items="Model.AvailableEnvironments"></select>
                </div>
            </div>
            <div class="form-group"></div>
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="Description" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="Description" />
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="DisplayOrder" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="DisplayOrder" />
                    <span asp-validation-for="DisplayOrder"></span>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="offset-md-3 offset-sm-3 col-md-9 col-sm-9">
                        <input type="submit" name="save" class="btn green" value="@Loc["Admin.Common.Save"]" />
                    </div>
                </div>
            </div>
        </div>
</form>